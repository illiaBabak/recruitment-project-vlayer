{
  "compilerOptions": {
    "target": "ES2023", // Or esnext, depending on your needs
    "module": "ESNext", // Allows import.meta and modern module syntax
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "types": ["cypress"],
    "lib": ["es5", "es6", "dom", "dom.iterable", "ES2023"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
